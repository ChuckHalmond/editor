{
    "compilerOptions": {
        "outDir": "web/dist",
        "target": "es2019",
        "experimentalDecorators": true,
        "module": "amd",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "declaration": true,
        "rootDir": "./src",
        "baseUrl": "./",
        "skipLibCheck": true,
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./node_modules/"
    ]
}