{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es2021",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "rootDir": "./",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "esModuleInterop" : true,
    "allowSyntheticDefaultImports" : true
  },
  "exclude": [
    "./lib",
    "./node_modules"
  ]
}