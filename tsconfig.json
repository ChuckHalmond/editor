{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ES6",
    "lib": [
      "DOM",
      "ES6",
      "ES2022"
    ],
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "rootDir": "./src",
    "baseUrl": "./",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "./node_modules",
    "./lib"
  ]
}