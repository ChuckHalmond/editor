{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es2021",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "./types",
    "rootDir": "./src",
    "baseUrl": "./",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./lib",
    "./node_modules"
  ]
}