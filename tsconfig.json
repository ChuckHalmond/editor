{
    "compilerOptions": {
        "outDir": "./lib",
        "target": "es2018",
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "declaration": true,
        "rootDir": "./",
        "baseUrl": "./",
        "skipLibCheck": true,
        "paths": {
            "@editor": [
              "./lib"
            ]
        },
        "esModuleInterop" : true,
        "allowSyntheticDefaultImports" : true
    },
    "exclude": [
        "./lib",
        "./node_modules"
    ]
}