{
    "compilerOptions": {
        "outDir": "./lib",
        "outFile": "./lib/index.js",
        "target": "es2019",
        "experimentalDecorators": true,
        "module": "amd",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "declaration": true,
        "rootDir": "./src",
        "baseUrl": "./",
        "skipLibCheck": true,
        "paths": {
            "@editor": [
              "./lib"
            ]
        }
    },
    "include": [
        "./src/**/*.ts"
    ]
}